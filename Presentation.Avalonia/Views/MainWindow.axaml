<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Presentation.Core.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Presentation.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Presentation.Avalonia">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>


    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Books" >
                <MenuItem Header="Add New" />
                <MenuItem Header="Search" />
                <MenuItem Header="Check Status" />
            </MenuItem>
            <MenuItem Header="Members">
                <MenuItem Header="Register new" />
                <MenuItem Header="Search" />
            </MenuItem>
            <MenuItem Header="Transactions">
                <MenuItem Header="Register Lease"/>
                <MenuItem Header="Register Return"/>
            </MenuItem>
        </Menu>
        <Canvas>
            <ContentControl Content="{Binding SelectedViewModel}"></ContentControl>
        </Canvas>
        
    </DockPanel>

</Window>